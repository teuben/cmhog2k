- native compiler on solaris
	setenv CC cc
	setenv F77 f77
	setenv CPP /lib/cpp	
	setenv CFLAGS -fast
	setenv FFLAGS -fast
	configure
	make cmhog
	setenv LD_LIBRARY_PATH /local/lib 

